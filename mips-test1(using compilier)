.data
.LC0:
	.asciiz "playing 3 rounds\n"
	
.LC1:
	.asciiz "enter 1, 2, or 3, for rps \n"
	
.LC2:
	.asciiz "computer chooses paper, you loosen \n"
	
.LC3:
	.asciiz "computer chooses scissors, you loose \n"
	
.LC4:
	.asciiz "computer chooses rock, you loose \n"
	
.LC5:
	.asciiz "you didn't a valid number. you forfeit and loose by default \n"
	
.LC6:
	.asciiz "you lost 3 times, computer wins! \n"
	
.text


main:
la $a0, .LC0 
li $v0, 4  	  
syscall

li $s0, 0
loopRound:
jal playRound
add $s0, $s0, 1
beq $s0, 3, end
j loopRound

end:

la $a0, .LC6
li $v0, 4
syscall


li $v0, 10	
syscall


playRound:
la $a0, .LC1 
li $v0, 4  	   
syscall

li $v0, 5	   
syscall
move $t0, $v0

li $a1, 1
beq $t0, $a1, cond1
add $a1, $a1, 1

beq $t0, $a1, cond2
add $a1, $a1, 1	

beq $t0, $a1, cond3
add $a1, $a1, 1	

beq $t0, $a1, cond4
add $a1, $a1, 1

returnTest:
jr $ra


cond1:
la $a0, .LC2
li $v0, 4
syscall
j returnTest

cond2:
la $a0, .LC3
li $v0, 4
syscall
j returnTest

cond3:
la $a0, .LC4
li $v0, 4
syscall
j returnTest

cond4:
la $a0, .LC5
li $v0, 4
syscall
j returnTest